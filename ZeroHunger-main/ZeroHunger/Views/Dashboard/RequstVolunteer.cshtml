
@{
    ViewBag.Title = "RequstVolunteer";
    Layout = "~/Views/Shared/DashboardLayoutNgo.cshtml";
}





@using (Html.BeginForm("RequstVolunteer", "Dashboard", FormMethod.Post, new { @class = "pe-lg-5 pt-5" }))
{
    <div class="d-flex justify-content-center">
        <div class="form-group">
            <h2 class="text-center">Request Volunteer</h2>
            <div class="mb-3">
                <label for="restaurentRequsted" class="form-label">Restaurent Requsted</label>
                <input type="text" class="form-control" id="restaurentRequsted" name="restaurentRequsted" placeholder="Restaurant Requstd">
            </div>
            <div class="mb-3">
                <label for="status" class="form-label">Request Status</label>
                <input type="text" class="form-control" id="status" name="status" placeholder="Request Status">
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Request Quantity</label>
                <input type="text" class="form-control" id="quantity" name="quantity" placeholder="Requested Quantity">
            </div>
            <div class="mb-3">
                <label for="lastPickupAllowed" class="form-label">Last Pickup Allowed</label>
                <input type="datetime-local" class="form-control" id="lastPickupAllowed" name="lastPickupAllowed" placeholder="Enter Last Pickup Date">
            </div>
            <div class="mb-3">
                <label for="diliveryAddress" class="form-label">Dilivery Address</label>
                <input type="text" class="form-control" id="diliveryAddress" name="diliveryAddress" placeholder="Enter Dilivery Address">
            </div>
        </div>
    </div>
    <div class="form-group text-center">
        <input type="submit" class="btn btn-primary" value="Submit">
    </div>
}

