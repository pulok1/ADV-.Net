
@{
    ViewBag.Title = "RestaurantLogIn";
    Layout = "~/Views/Shared/EmptyLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurent|LogIn</title>
</head>
<body>
    <form method="post" class="pe-lg-5 pt-5">
        <div class="d-flex justify-content-center pt-5">

            <div class="form-group pt-5">
                <h2>Restaurant LogIn</h2>
                <div class="mb-3 pt-5">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email Here">
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Your Password">
                </div>
            </div>
        </div>
        <div class="form-group text-center">
.            <input type="submit" class="btn btn-primary" value="Submit">
        </div>
    </form>
</body>
</html>

